                <div class="form-group">
                   
                        <label for="txtPacienteApellido" name="lblPacienteApellido">Apellido del Paciente:</label>
                        <input class="form-control" type="text" value="@Model.Paciente.Apellido" name=txtPacienteApellido id="txtPacienteApellido" />
                    </div>


                    <div class="form-group">
                        
                        <label for="txtEdad" name="lblEdad">Edad:</label>
                        <input class="form-control" type="text" value="@Model.Edad" name=txtEdad id="txtEdad" />
                    </div>

                          <div class="form-group">
                         
